@model SV20T1020610.DomainModels.Supplier
<div class="box box-primary">

    <div class="box-body">
        <div class="form-group">
            @Html.ValidationMessage("Error", new { @style = "color:#f00" })
        </div>
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp (*):</label>
                <input type="text" class="form-control" name="SupplierName" autofocus value="@Model.SupplierName">
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Tên giao dịch (*):</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Điện thoại (*):</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Email (*):</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Địa chỉ (*):</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Tỉnh thành (*):</label>
                @*<select class="form-control" name="Provice">
                <option>--Chọn tỉnh/thành</option>
                @foreach (var item in SV20T1020067.BusinessLayers.CommonDataService.ListOfProVinces())
                {
                if (item.ProvinceName == Model.Provice)
                {
                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                }
                else
                {

                <option value="@item.ProvinceName">@item.ProvinceName</option>
                }
                }

                </select>
                *@
                @Html.DropDownListFor(m => m.Provice, SelectListHelper.Provinces(), new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Provice), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Supplier">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>


    </div>
</div>