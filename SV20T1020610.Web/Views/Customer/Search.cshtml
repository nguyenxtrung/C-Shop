@model SV20T1020610.Web.Models.CustomerSearchResult
@{
    Layout = null;
}
@{
    int stt = (Model.Page - 1) * Model.PageSize + 1;

}
@if (Model.SearchValue != "")
{
    <p style="margin:10px 0 10px 0">
        Từ khóa tìm kiếm: <strong>@Model.SearchValue</strong>
    </p>
}
<!-- -->
<div>
    @if (Model.Data != null && Model.Data.Any())
    {
        <p style="margin:10px 0 10px 0">
            Có <strong> @Model.RountCount</strong> khách hàng trong tổng số <strong> @Model.PageCount </strong>trang !!!!
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>STT</th>
                        <th>Tên khách hàng</th>
                        <th>Tên giao dịch</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Tỉnh thành</th>
                        <th>Bị khóa?</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Data)
                    {

                        <tr>
                            <td>@stt</td>
                            <td>@item.CustomerName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.Province</td>
                            <td>
                                @if (item.IsLocked == true)
                                {
                                    <i class="fa fa-check" style="margin-left: 30px;"></i>
                                }
                            </td>
                            <td class="text-right">
                                <a href="~/Customer/Edit/@item.CustomerID" class="bnt bnt-xs bnt-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a style="color: red;" href="~/Customer/Delete/@item.CustomerID" class="bnt bnt-xs bnt-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                        stt++;

                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center" style=" color: red; margin-top: 20px; font-weight: bold;">Không có kết quả tìm kiếm.</p>
    }
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (Model.Page == i)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@i)">@i</a></li>
                    }
                }
            </ul>
        </div>
    }
</div>